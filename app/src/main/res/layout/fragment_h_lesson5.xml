<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.julitech.brykiva.courses.html.hLesson5Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML Formatting"
        style="@style/TitleText"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/html_formatting_1"/>
        <br.tiagohm.codeview.CodeView
            app:cv_font_size="14"
            app:cv_show_line_number="false"
            app:cv_wrap_line="false"
            android:id="@+id/code1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/html_formatting_2"/>
        <br.tiagohm.codeview.CodeView
            app:cv_font_size="14"
            app:cv_show_line_number="false"
            app:cv_wrap_line="false"
            android:id="@+id/code2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/html_formatting_3"/>
    </LinearLayout>

</FrameLayout>
