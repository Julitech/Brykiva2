<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="AppThemeOverlay" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="TitleText" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#616161</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="TopicsTitle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">normal</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#424242</item>
    </style>
</resources>
